
#include <iostream>
#include <fstream>
#include <string>
#define LEDGPIO "/sys/class/gpio/gpio60/value"
#define BUTTONGPIO "sys/class/gpio/gpio46/value"

using namespace std;

int main(int argc , char* argv[]){

	std::string file1name = BUTTONGPIO;
	std::string file2name = LEDGPIO;

	std::ifstream inputFile(file1name);

	std::ofstream outputFile(file2name);

	if (inputFile.is_open() && outputFile.is_open())
	{
		std::string line;
	while (std::getline(inputFile, line))
	{
	outputFile << line;
	}

	inputFile.close();
	outputFile.close();

	std::cout << "File Done Copying" << endl;
	}
	else 
	{
	cout << "File Failed to Copy" << endl;
	}
	return 0;
}
